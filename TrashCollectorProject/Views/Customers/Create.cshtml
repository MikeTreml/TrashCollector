@model TrashCollectorProject.Models.Customer

@{
    ViewData["Title"] = "Sign Up for Pick Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update @User.Identity.Name</h1>

<h4>Please fill form below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountBalance" class="control-label"></label>
                <input asp-for="AccountBalance" class="form-control" />
                <span asp-validation-for="AccountBalance" class="text-danger"></span>
            </div>
            @*<fieldset>
            <legend>Group 1 - radio button behavior</legend>
            <input type="checkbox" groupname="group1" value="1" /> Checkbox 1<br />
            <input type="checkbox" groupname="group1" value="2" /> Checkbox 2<br />
            <input type="checkbox" groupname="group1" value="3" /> Checkbox 3<br />
            <input type="checkbox" groupname="group1" value="4" /> Checkbox 4<br />
            <input type="checkbox" groupname="group1" value="5" /> Checkbox 5<br />
            </fieldset>
                *@
            <div class="form-group">
                <label asp-for="PickUpDay" class="control-label"></label>
                <select asp-for="PickUpDay" class="form-control">
                    <option value="">Select Day</option>

                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>

                </select>
                <span asp-validation-for="PickUpDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendStart" class="control-label"></label>
                <input asp-for="SuspendStart" class="form-control" />
                <span asp-validation-for="SuspendStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuspendEnd" class="control-label"></label>
                <input asp-for="SuspendEnd" class="form-control" />
                <span asp-validation-for="SuspendEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address.AddressLine1" class="control-label"></label>
                <input asp-for="Address.AddressLine1" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.AddressLine2" class="control-label"></label>
                <input asp-for="Address.AddressLine2" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.City" class="control-label"></label>
                <input asp-for="Address.City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.State" class="control-label"></label>
                <input asp-for="Address.State" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Address.ZipCode" class="control-label"></label>
                <input asp-for="Address.ZipCode" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=checkbox]').click(function () {
                var groupName = $(this).attr('groupname');

                if (!groupName)
                    return;

                var checked = $(this).is(':checked');

                $("input[groupname='" + groupName + "']:checked").each(function () {
                    $(this).prop('checked', '');
                });

                if (checked)
                    $(this).prop('checked', 'checked');
            });
        });
    </script>
}